@page "/signup"

@if (_showErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in _errors)
        {
            <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter">
                @error
            </RadzenAlert>
        }
    </div>
}

<RadzenRow Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 800px; overflow: hidden;">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="height: 100%')">
            <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H2" Class="rz-mb-6">Welcome!</RadzenText>
            <RadzenText TextStyle="TextStyle.H6">Join us!</RadzenText>
        </RadzenCard>
    </RadzenColumn>

    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-p-12">
            <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="rz-mb-6">
                Sign up!
            </RadzenText>

            <RadzenTemplateForm Data="@_registerModel">
                <div style="display: grid; gap: 10px;">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>

                    <RadzenTextBox @bind-Value="@_registerModel.Username" Placeholder="UserName"/>
                    <ValidationMessage For="() => _registerModel.Username"/>

                    <RadzenPassword @bind-Value="@_registerModel.Password" Placeholder="Password"/>
                    <ValidationMessage For="() => _registerModel.Password"/>

                    <RadzenTextBox @bind-Value="@_registerModel.Email" Placeholder="Email"/>
                    <ValidationMessage For="() => _registerModel.Email"/>

                    <RadzenButton Text="Sign up" Click="SubmitForm"/>
                </div>
            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>


